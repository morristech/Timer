<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/achievement_container"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="8dp"
	app:cardCornerRadius="2dp"

	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="8dp"
		android:orientation="vertical">

		<com.iec.dwx.timer.Views.SquareImageView
			android:id="@+id/iv_achievement_photo"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			/>

		<TextView
			android:id="@+id/tv_achievement_head"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:padding="8dp"
			android:textColor="@color/common_black"
			android:text="2014-11-11\n19:12:32"
			android:textSize="20sp"/>

		<TextView
			android:id="@+id/tv_achievement_time"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:gravity="center"
			android:padding="8dp"
			android:text="2014-11-11\n19:12:32"
			android:textSize="14sp"/>
	</LinearLayout>

	<View
		android:id="@+id/achievement_shader"
		android:visibility="gone"
		android:background="@color/black_overlay"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
</android.support.v7.widget.CardView>