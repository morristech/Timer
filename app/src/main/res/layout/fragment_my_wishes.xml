<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#378265"
             tools:context="com.iec.dwx.timer.Fragments.MyWishesFragment">

	<!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/fragment_my_wishes_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/baclground"/>
    <TextView
        android:id="@+id/fragment_my_wishes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fragment_my_wishes_tv_size"
        android:hint="Life will be  better !"/>
    <LinearLayout
        android:id="@+id/fragment_my_wishes_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"
        android:orientation="vertical">
    <ImageButton
        android:id="@+id/fragment_my_wishes_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/fragment_my_wishes_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/fragment_my_wishes_into_public_wishes_button"
        android:background="@color/mywish_into_public_wish_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_my_wishes_add"
        android:visibility="gone"
        android:textSize="@dimen/fragment_my_wishes_button"
        />
    </LinearLayout>
</FrameLayout>
