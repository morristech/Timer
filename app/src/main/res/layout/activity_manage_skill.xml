<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.iec.dwx.timer.Activities.ManageSkillActivity">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar_manage_skill"
			android:layout_width="match_parent"
			android:layout_height="?actionBarSize"
			app:layout_scrollFlags="scroll|enterAlways"
			app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
			app:subtitle="管理技能"
			app:subtitleTextColor="@color/toolbar_text_color"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="0.1dp"
			android:background="@color/common_black"/>
	</android.support.design.widget.AppBarLayout>

	<android.support.v7.widget.RecyclerView
		android:padding="4dp"
		android:id="@+id/rv_manage_skill"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		/>

</LinearLayout>
