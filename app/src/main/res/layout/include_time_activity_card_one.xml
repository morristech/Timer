<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/card_one_background"
	android:orientation="vertical"
	tools:context=".TimeActivity"
	tools:showIn="@layout/activity_time">

	<com.iec.dwx.timer.Views.ClockView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="@dimen/card_margin"
		android:layout_marginRight="@dimen/card_margin"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:textColor="@color/common_black"
			android:id="@+id/tv_card_one_head"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/card_one_head"
			android:textSize="@dimen/card_head_size"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="20dp"/>

		<TextView
			android:textColor="@color/common_black"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/card_subhead_padding_left"
			android:text="@string/card_one_subhead"
			android:textSize="@dimen/card_subhead_size"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="20dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="32dp"
			android:layout_marginRight="32dp"
			android:background="@drawable/tv_rect_background"
			android:orientation="vertical">

			<TextView
				android:textColor="@color/common_black"
				android:id="@+id/tv_card_one_cell_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="8dp"
				android:paddingTop="8dp"
				android:text="* %s"
				/>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.1dp"
				android:background="@color/common_black"/>

			<TextView
				android:textColor="@color/common_black"
				android:id="@+id/tv_card_one_cell_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="8dp"
				android:paddingTop="8dp"
				android:text="* %s"
				/>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.1dp"
				android:background="@color/common_black"/>

			<TextView
				android:textColor="@color/common_black"
				android:id="@+id/tv_card_one_cell_3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="8dp"
				android:paddingTop="8dp"
				android:text="* %s"
				/>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.1dp"
				android:background="@color/common_black"/>

			<TextView
				android:textColor="@color/common_black"
				android:id="@+id/tv_card_one_cell_4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="8dp"
				android:paddingTop="8dp"
				android:text="* %s"
				/>
		</LinearLayout>
	</LinearLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="100dp">

		<Button
			android:id="@+id/btn_time_leave"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginBottom="14dp"
			android:background="@drawable/btn_card_one"
			android:textColor="@color/common_black"
			android:gravity="center"
			android:text="@string/card_one_btn"
			android:textSize="@dimen/card_btn_text_size"/>
	</FrameLayout>
</LinearLayout>